<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mysomsong2dimon"

    >
    <requestFocus />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LOL1">

        <ImageView
            android:contentDescription="@string/common_open_on_phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView1"
            android:layout_gravity="center"

            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/savebot"
            android:background="@drawable/saveicon"
            android:layout_gravity="end|top"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>


    </FrameLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:id="@+id/horizontalScrollView"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:layout_width="240dp"
                android:layout_height="240dp"
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/m1"
                android:background="@drawable/m1"
                />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:id="@+id/m2"
                android:background="@drawable/m2"/>

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:id="@+id/m3"
                android:background="@drawable/m7"/>
            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:id="@+id/w1"
                android:background="@drawable/w3"/>
            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:id="@+id/w2"
                android:background="@drawable/w4"/>
            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:id="@+id/w3"
                android:background="@drawable/w7"/>

        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>
