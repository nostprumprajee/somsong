<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mysomsong1">

    <Button
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/kom"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.28"
        android:background="@drawable/kom"
        android:layout_marginLeft="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="OnClickdekom"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/button7"
        android:layout_gravity="center_vertical"
        android:background="@drawable/dimon"
        android:layout_alignTop="@+id/kom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="0dp"
        android:onClick="OnClickdedai"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/button8"
        android:background="@drawable/re"
        android:layout_below="@+id/button7"
        android:layout_alignLeft="@+id/kom"
        android:layout_alignStart="@+id/kom"
        android:layout_marginTop="30dp"
        android:onClick="OnClickdere"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/button8"
        android:layout_alignRight="@+id/button7"
        android:layout_alignEnd="@+id/button7"
        android:background="@drawable/rectangle"
        android:onClick="OnClickderectang" />

</RelativeLayout>
