<?xml version="1.0" encoding="utf-8"?>
<!--หน้าที่ link มาจากการกดปุ่ม ออกแบบสมทรง ในหน้าเมนูหลัก
จะมีรูปแบบใบหน้าให้เลือก เพื่อนำไปรวมกับทรงผมต่างๆ-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mysomsong1">

    <!--ปุ่มเลือกรูปแบบใบหน้ากลม-->
    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/kom"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.28"
        android:background="@drawable/kom"
        android:layout_marginLeft="29dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="OnClickdekom"/>

    <!--ปุ่มเลือกรูปแบบใบหน้าเพชร-->
    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/button7"
        android:layout_gravity="center_vertical"
        android:background="@drawable/dimon"
        android:layout_alignTop="@+id/kom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="20dp"
        android:onClick="OnClickdedai"/>

    <!--ปุ่มเลือกรูปแบบใบหน้ารี-->
    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/button8"
        android:background="@drawable/re"
        android:layout_below="@+id/button7"
        android:layout_alignLeft="@+id/kom"
        android:layout_alignStart="@+id/kom"
        android:onClick="OnClickdere"/>

    <!--ปุ่มเลือกรูปแบบใบหน้าเหลี่ยม-->
    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/button8"
        android:layout_alignRight="@+id/button7"
        android:layout_alignEnd="@+id/button7"
        android:background="@drawable/rectangle"
        android:onClick="OnClickderectang" />

</RelativeLayout>
