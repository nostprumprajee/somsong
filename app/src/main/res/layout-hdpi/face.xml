<?xml version="1.0" encoding="utf-8"?>
<!--หน้าสำหรับเลือกรูปแบบหน้า เพื่ออ่านคำแนะนำในการตัดผมสำหรับรูปแบบหน้าต่างๆ-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/somsongrec2"
    android:weightSum="1">

    <!--ปุ่มคำแนะนำสำหรับรูปแบบหน้ากลม-->
    <Button
        android:layout_width="150dp"
        android:layout_height="151dp"
        android:id="@+id/kom"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.28"
        android:layout_marginTop="145dp"
        android:background="@drawable/kom"
        android:onClick="OnClickKom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <!--ปุ่มคำแนะนำสำหรับรูปแบบหน้าเพชร-->
    <Button
        android:layout_width="150dp"
        android:layout_height="151dp"
        android:id="@+id/button7"
        android:layout_gravity="center_vertical"
        android:background="@drawable/dimon"
        android:layout_alignTop="@+id/kom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:onClick="OnClickdia"/>

    <!--ปุ่มคำแนะนำสำหรับรูปแบบหน้ารี-->
    <Button
        android:layout_width="150dp"
        android:layout_height="151dp"
        android:id="@+id/button8"
        android:layout_below="@+id/kom"
        android:layout_alignLeft="@+id/kom"
        android:layout_alignStart="@+id/kom"
        android:background="@drawable/re"
        android:layout_marginTop="20dp"
        android:onClick="OnClickre"/>

    <!--ปุ่มคำแนะนำสำหรับรูปแบบหน้าเหลี่ยม-->
    <Button
        android:layout_width="150dp"
        android:layout_height="151dp"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/button8"
        android:layout_alignRight="@+id/button7"
        android:layout_alignEnd="@+id/button7"
        android:background="@drawable/rectangle"
        android:onClick="OnClickrec"/>
</RelativeLayout>
