<?xml version="1.0" encoding="utf-8"?>
<!--หน้าสำหรับเรียกดูภาพที่เราได้ออกแบบไว้ในเมนูออกแบบสมทรง-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/home"
    tools:context=".Myss">

    <!--พื้นที่สำหรับแสดงภาพที่เลือกมาจากอัลบัม-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="0dp" />

    <!--ปุ่มสำหรับเลือกรูปภาพจากอัลบัม-->
    <Button
        android:id="@+id/buttonIntent"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/botmyss"
        />
    <!--ปุ่มสำหรับทำการ detcet ใบหน้า บนรูปทีเราเลือกไว้-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Process"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
